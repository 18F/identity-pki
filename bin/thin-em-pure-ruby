#!/usr/bin/env ruby

# wrapper around Thin commandline that requires eventmachine's pure ruby implementation
# before thin can require it

require 'em/pure_ruby'

# Monkeypatch EventMachine cause :[
module EventMachine
  class Selectable
    def get_sockname
      io.getsockname
    end
  end
end

require 'thin'
Thin::Runner.new(ARGV).run!

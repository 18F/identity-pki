{
  "Version": "2012-10-17",
  "Statement": [
    {
    "Effect": "Allow",
      "Action": [
        "iam:*VirtualMFADevice"
      ],
      "Resource": [
        "arn:aws:iam::*:mfa/${aws:username}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:*AccessKey*",
        "iam:*LoginProfile",
        "iam:*MFADevice*",
        "iam:*SigningCertificate*"
      ],
      "Resource": [
        "arn:aws:iam::*:user/${aws:username}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
         "iam:ListVirtualMFADevices"
      ],
      "Resource": [
        "arn:aws:iam::*:mfa/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:ListUsers"
      ],
      "Resource": [
        "arn:aws:iam::*:user/*"
      ]
    },
    {
      "Effect":"Allow",
      "Action":["s3:*"],
      "Resource":[
        "arn:aws:s3:::login-gov-*-chefstuff",
        "arn:aws:s3:::login-gov-*-chefstuff/*",
        "arn:aws:s3:::login-gov-*-logs",
        "arn:aws:s3:::login-gov-*-logs/*",
        "arn:aws:s3:::login-gov-*-secrets",
        "arn:aws:s3:::login-gov-*-secrets/*",
        "arn:aws:s3:::login_dot_gov_tf_state",
        "arn:aws:s3:::login_dot_gov_tf_state/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets"
      ],
      "Resource": [
        "arn:aws:s3:::*"
      ]
    }
  ]
}

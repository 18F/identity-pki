name: Denied User Logins
type: frequency
index: logstash-*
alert_text: Got more than 5 denied logins in 10 minutes in <%= @env %>.  Possible enemy action
owner: <%= @env %>
num_events: 5
timeframe:
    minutes: 10
filter:
- query:
    query_string:
      query: '"ossec: Alert Level: 5; Rule: 5718" AND source:"/var/log/syslog"'
alert:
<% if ! @emails.empty? %>
- "email"
<% end %>
<% if ! @webhook.nil? %>
- "slack"
<% end %>
<% if ! @emails.empty? %>
email:
<%   @emails.each do |e| %>
- "<%= e %>"
<%   end %>
<% end %>
<% if ! @webhook.nil? %>
slack_webhook_url: <%= @webhook %>
slack_username_override: <%= "#{@env} alerts" %>
slack_channel_override: <%= @slackchannel %>
<% end %>

<%
if node.fetch("provisioner", {"auto-scaled" => false}).fetch("auto-scaled")
  elk_passwords = Chef::Recipe::ConfigLoader.load_json(node, 'elk_htpasswd.json', common: true)
  @users.each do |username|
    %> <%= "#{username}:#{elk_passwords.fetch(username)}" %>
<%
  end
else %>
<% @users.each do |username| %>
<%   if ! Chef::DataBagItem.load('users', username)['password'].nil? %>
<%= username %>:<%= Chef::DataBagItem.load('users', username)['password'] %>
<%   end %>
<% end %>
<% end %>

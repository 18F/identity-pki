name: Connection denied by proxy
type: frequency
index: logstash-*
alert_text: A connection was denied by the proxy in <%= @env %>.
owner: <%= @env %>
num_events: 1
timeframe:
    minutes: 5
filter:
- query:
    query_string:
      query: '"TCP_DENIED/403" AND source:"/var/log/squid/access.log"'
alert:
<% if ! @emails.empty? %>
- "email"
<% end %>
<% if ! @webhook.nil? %>
- "slack"
<% end %>
<% if ! @emails.empty? %>
email:
<%   @emails.each do |e| %>
- "<%= e %>"
<%   end %>
<% end %>
<% if ! @webhook.nil? %>
slack_webhook_url: <%= @webhook %>
slack_username_override: <%= "#{@env} alerts" %>
slack_channel_override: ["<%= @slackchannel %>"]
<% end %>

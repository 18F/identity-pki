name: New sudo
type: any
index: logstash-*
alert_text: Got a new person sudoing.  Make sure that this is OK.
owner: <%= @env %>
filter:
- query:
    query_string:
      query: '"First time user executed sudo"'
alert:
<% if ! @emails.empty? %>
- "email"
<% end %>
<% if ! @webhook.nil? %>
- "slack"
<% end %>
<% if ! @emails.empty? %>
email:
<%   @emails.each do |e| %>
- "<%= e %>"
<%   end %>
<% end %>
<% if ! @webhook.nil? %>
slack_webhook_url: <%= @webhook %>
slack_username_override: <%= "#{@env} alerts" %>
slack_channel_override: [<%= @slackchannel %>]
<% end %>

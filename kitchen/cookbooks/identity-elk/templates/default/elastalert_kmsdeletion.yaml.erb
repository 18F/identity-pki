name: KMS key deletion
type: any
index: logstash-cloudtrail-*
alert_text: Saw a KMS key deletion event in cloudtrail for this account.  Make sure that this is OK.
owner: cloudtrail
filter:
- query:
    match:
      eventName: ScheduleKeyDeletion
alert:
<% if ! @emails.empty? %>
- "email"
<% end %>
<% if ! @webhook.nil? %>
- "slack"
<% end %>
<% if ! @emails.empty? %>
email:
<%   @emails.each do |e| %>
- "<%= e %>"
<%   end %>
<% end %>
<% if ! @webhook.nil? %>
slack_webhook_url: <%= @webhook %>
slack_username_override: <%= "#{@env} alerts" %>
slack_channel_override: ["<%= @slackchannel %>"]
<% end %>

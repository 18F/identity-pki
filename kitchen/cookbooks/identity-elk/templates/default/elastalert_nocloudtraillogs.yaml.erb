name: No CloudTrail Logs
type: flatline
index: logstash-cloudtrail*
alert_text: logs from cloudtrail in the <%= @env %> ELK instance seem to have stopped entirely!
owner: <%= @env %>
doc_type: _doc
# cloudtrail logs can take up to 15m before they are available hence we need to calculate that
# into how we alert on this metric. The query delay causes elastalert to search 15m back where
# we can guarantee that most if not all the logs are present in the search results.
query_delay:
    minutes: 15
realert:
    minutes: 5
threshold: <%= @thresholds['cloudtrail'] %>
timeframe:
    minutes: 5
use_count_query: true
alert:
<% if ! @emails.empty? %>
- "email"
<% end %>
<% if ! @webhook.nil? %>
- "slack"
<% end %>
<% if ! @emails.empty? %>
email:
<%   @emails.each do |e| %>
- "<%= e %>"
<%   end %>
<% end %>
<% if ! @webhook.nil? %>
slack_webhook_url: <%= @webhook %>
slack_username_override: <%= "#{@env} alerts" %>
slack_channel_override: ["<%= @slackchannel %>"]
<% end %>

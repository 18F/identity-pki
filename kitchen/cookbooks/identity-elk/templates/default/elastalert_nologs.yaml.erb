name: No Logs
type: flatline
index: logstash-2*
alert_text: logs from logstash in the <%= @env %> ELK instance seem to have stopped entirely!
owner: <%= @env %>
threshold: <%= @thresholds['logstash'] %>
realert:
    hours: 2
doc_type: doc
scan_entire_timeframe: true
timeframe:
    minutes: 20
use_count_query: true
alert:
<% if ! @emails.empty? %>
- "email"
<% end %>
<% if ! @webhook.nil? %>
- "slack"
<% end %>
<% if ! @emails.empty? %>
email:
<%   @emails.each do |e| %>
- "<%= e %>"
<%   end %>
<% end %>
<% if ! @webhook.nil? %>
slack_webhook_url: <%= @webhook %>
slack_username_override: <%= "#{@env} alerts" %>
slack_channel_override: ["<%= @slackchannel %>"]
<% end %>

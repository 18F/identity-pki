server {
    listen       80;
    server_name  <%= "#{@app}.#{@domain}" %>;
    return       301  https://$server_name$request_uri;
}

server {
    listen       443 ssl;
    server_name  <%= "#{@app}.#{@domain}" %>;

    ssl_certificate /etc/letsencrypt/live/<%= "#{@app}.#{@domain}" %>/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/<%= "#{@app}.#{@domain}" %>/privkey.pem;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    ssl_prefer_server_ciphers on;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 5m;
    ssl_stapling on;
    ssl_stapling_verify on;
    # Avoid ssl stripping attack
    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload";

    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # Allow specific HTTP methods
    if ($request_method !~ ^(DELETE|GET|HEAD|OPTIONS|POST|PUT)$ ) {
       return 405;
    }

    location / {
        # Basic Auth Config
        satisfy any;
        <%- @security_group_exceptions.each do |sge| %>
        allow <%= sge %>;
        <%- end %>
        auth_basic "Restricted";
        auth_basic_user_file /opt/nginx/conf/htpasswd;

        root /srv/<%= @app %>/current/public;
        passenger_enabled on;
        passenger_min_instances 5;
        rails_env production;
    }
}

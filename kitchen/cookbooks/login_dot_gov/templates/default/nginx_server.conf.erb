server {
    listen       80;
    server_name  <%= @server_name %> <%= @server_aliases -%>;
    return       301  https://$server_name$request_uri;
}

server {
    listen       443 ssl;
    server_name  <%= @server_name %> <%= @server_aliases -%>;

    ssl_certificate /etc/ssl/certs/<%= @app %>-cert.pem;
    ssl_certificate_key /etc/ssl/private/<%= @app %>-key.pem;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    ssl_prefer_server_ciphers on;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 5m;
    ssl_stapling on;
    ssl_stapling_verify on;
    # Avoid ssl stripping attack
    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload";

    # TODO: why do we use Google name servers directly?
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    root /srv/<%= @app %>/current/public;
    passenger_enabled on;
    <% if @saml_env -%>
    passenger_env_var SAML_ENV <%= @saml_env %>;
    <% end -%>
    <% if @secret_key_base -%>
    passenger_env_var SECRET_KEY_BASE <%= @secret_key_base %>;
    <% end -%>
    <% if @sp_pass -%>
    passenger_env_var SP_PASS <%= @sp_pass %>;
    <% end -%>
    <% if @sp_name -%>
    passenger_env_var SP_NAME <%= @sp_name %>;
    <% end -%>

    passenger_min_instances 5;
    rails_env production;

    # Allow specific HTTP methods
    if ($request_method !~ ^(DELETE|GET|HEAD|OPTIONS|POST|PUT)$ ) {
       return 405;
    }

    <% if @basic_auth %>
    location / {
        # Basic Auth Config
        satisfy any;
        <%- @security_group_exceptions.each do |sge| %>
        allow <%= sge %>;
        <%- end %>
        auth_basic "Restricted";
        auth_basic_user_file /opt/nginx/conf/htpasswd;
    }

    # Skip basic auth for /healthcheck* and /api/health*
    location /healthcheck {
    }
    location /api/health {
    }
    <% end %>

    # Content expiry rules
    # Content pages set to no-cache
    location ~* \.(?:manifest|appcache|html?|xml|json)$ {
        expires -1;
    }

    # Media: images, icons, video, audio, HTC
    location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc)$ {
        expires 1M;
        add_header Cache-Control "public";
    }

    # CSS and Javascript
    location ~* \.(?:css|js)$ {
        expires 1M;
        add_header Cache-Control "public";
    }

    # WebFonts
    location ~* \.(?:ttf|ttc|otf|eot|woff|woff2)$ {
        expires 1M;
    }
}

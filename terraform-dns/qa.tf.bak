resource "aws_route53_record" "a_qa" {
  name = "qa.login.gov"
  records = ["${data.terraform_remote_state.app-qa.aws_eip_public_ip}"]
  ttl = "300"
  type = "A"
  zone_id = "${var.zone_id}"
}

resource "aws_route53_record" "c_dash_qa" {
  name = "dashboard.qa.login.gov"
  records = ["${aws_route53_record.a_qa.name}"]
  ttl = "300"
  type = "CNAME"
  zone_id = "${var.zone_id}"
}

